
import os


# Load the users dictionary from the file (if it exists)

if os.path.isfile("save_game.txt"):
  file = open("save_game.txt","r")
  users_text = file.read()
  users = eval(users_text)
  file.close()
else:
  users = {}



# Now do your login stuff and your game

# ...



# When the user exits:
# Save the dictionary

file = open("save_game.txt","w")
file.write(str(users))
file.close

